<section id="profile" class="mdl-grid mdl-grid--no-spacing">
   <div class="mdl-layout-spacer"></div>
  <figure class="mdl-cell mdl-cell--8-col">
      <div class="mdl-card mdl-shadow--6dp">

        <div class="card-image">
            <div class="big-icon">
                <img alt="Imagen de perfil" class="" src="../img/female.jpg">
            </div>
            <!-- Colored FAB button with ripple -->
                <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
                    <i class="material-icons">edit</i>
                </button>
            
        </div>

        <div class="mdl-card__title mdl-card__">
            <h2 class="mdl-card__title-text">¡Hola {{user.user}}!</h2>              
        </div>
        <p class="mdl-card__supporting-text">Desde aquí puedes modificar tus datos:</p>

          <!-- validaciones desde servidor -->
          {{#if message}}
           <div class="alert alert-success" role="alert">
                <button type="button" class="close-alert">×</button>
                <i class="material-icons">check</i>
                {{message}}
           </div>
           {{/if}}
           {{#if error}}
                 <div class="alert alert-danger" role="alert">
                    <button type="button" class="close-alert">×</button>
                    <i class="material-icons">warning</i>
                    {{error}}
                </div>
           {{/if}}

          <form id="form-profile" action="/profile" method="POST">

            <div class="mdl-card__supporting-text">
              <div class=" mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <input class="mdl-textfield__input" name="user" id="user" value="{{user.user}}"/>
                  <label class="mdl-textfield__label" for="user">Usuario</label>
              </div>
              <!--- type email para validación en cliente -->
              <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <input class="mdl-textfield__input" type="email" name="email" id="email" value="{{user.email}}"/>
                  <label class="mdl-textfield__label" for="email">Email</label>
              </div>
              <!-- pattern con regex -->
              <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <input class="mdl-textfield__input" 
                      type="password" pattern=".{1,}"
                          name="password" id="password"
                              value="{{user.password}}"/>
                  <label class="mdl-textfield__label" for="password">Cambiar contraseña</label>
              </div>
              <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <input class="mdl-textfield__input" type="password" name="repeat-password" id="repeat-password"/>
                  <label class="mdl-textfield__label" for="repeat-password">Repite contraseña</label>
              </div>
              
              <div class="mdl-card__actions">
                    <div class="mdl-grid">
                        <button type="submit"
                        class="mdl-cell mdl-cell--12-col mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                            Guardar
                        </button>                                      
                    </div>
              </div>
            </div>
        </form>

  </figure>
  <div class="mdl-layout-spacer"></div>

</section>