<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{title}}</title>
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/components/material-design-lite/material.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <!-- error de carga -->
    <!-- bower uninstall -S fontawesome -->
    {{!-- <link rel="scss" href="/components/fontawesome/scss/fontawesome.scss"> --}}
    <!-- ocupa mucho -->
    {{!-- <link rel="stylesheet" href="/components/material-design-icons/iconfont/material-icons.css"> --}}
    <!-- custom theme -->
    <link rel="stylesheet" href="/styles/theme.css">
    <link rel="stylesheet" type="text/css" href="/styles/ui-md-alerts.css">
    <!-- toastr.min.css, jquery.min.js, toastr.min.js -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/css/toastr.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js"></script>
  </head>
  <body>
     {{!-- mdl-layout--fixed-header mdl-layout__header--scroll --}}
    <div class="mdl-layout mdl-js-layout">
      <header class="mdl-layout__header mdl-layout__header--waterfall"
              style="background: url(../img/{{imgBackground}}) center 4% no-repeat; background-size: cover;">
        <div class="mdl-layout__header-row mdl-layout--large-screen-only">
        {{> navbar}}
        </div>
        
      </header>

       <!-- Drawer -->
      <div class="mdl-layout__drawer mdl-layout--small-screen-only">
            {{> navbar}}
      </div>
      
      <!-- Todo lo que esté aquí no estará fijo con mdl header -->
      <main class="mdl-layout__content"> 

        <div style="background: url(../img/{{imgBackground}}) center 25% no-repeat; background-size: cover;">        
        {{> banner}}
        </div>    
        
        <section class="mdl-grid mdl-grid--no-spacing">
          <div class="mdl-layout-spacer"></div>
          <div class="mdl-cell mdl-cell--10-col">
              {{{body}}}
          </div>
          <div class="mdl-layout-spacer"></div>
        </section>
        
        <section id="who">
          {{> who}}
        </section>
        
        <section id="contact">
        <div class="mdl-grid mdl-grid--no-spacing">
          <div class="mdl-layout-spacer"></div>
          <div class="mdl-cell mdl-cell--10-col">
            {{> contact}}
          </div>
          <div class="mdl-layout-spacer"></div>
        </div>          
        </section>       

        <footer class="mdl-mega-footer">
          {{> footer}}
        </footer>
      </main>

      <!-- scripts -->
      <script src="/components/material-design-lite/material.min.js"></script>
      <!-- Google Maps -->
      <script src="/js/main.js"></script>
      <script src="https://maps.googleapis.com/maps/api/js?key=APIKEY_GOOGLEMAPS&callback=myMap"></script>
      
  </body>
</html>

